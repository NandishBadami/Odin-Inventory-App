<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Items</title>
</head>
<body>
    <%- include('header.ejs') %>
    <h1>Items of <%= category_name %> Category:</h1>
    <a href="/new-item"><button>Add New Item</button></a>
    <% items.forEach(item => { %>
        <hr>
        <ul>
            <li>Name: <%= item.name %></li>
            <li>Quantity: <%= item.quantity %></li>
        </ul>
        <a href="/delete-item/<%= item.id %>"><button>Delete</button></a>
        <a href="/update-item/<%= item.id %>"><button>Edit</button></a>
        <hr>
    <% }); %>
    <% if (items.length == 0) { %>
        <p>No Items Yet</p>
    <% } %>
</body>
</html>